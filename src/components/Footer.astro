---
export interface Props {
	csClubUrl: string;
	githubUrl: string;
	discordUrl: string;
}

const { csClubUrl, githubUrl, discordUrl } = Astro.props;
---

<footer class="footer">
	<div class="container">
		<div class="footer-content">
			<div class="footer-links">
				<a href={csClubUrl} target="_blank" rel="noopener noreferrer">CCSF CS CLUB</a>
				<a href={githubUrl} target="_blank" rel="noopener noreferrer">
					<i class="fab fa-github"></i>
				</a>
				<a href={discordUrl} target="_blank" rel="noopener noreferrer">
					<i class="fab fa-discord"></i>
				</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		padding: 2rem 0;
		background: rgba(0, 0, 0, 0.3);
		backdrop-filter: blur(10px);
	}

	.footer-content {
		display: flex;
		justify-content: flex-end;
		align-items: center;
		max-width: 800px;
		margin: 0 auto;
	}

	.footer-text {
		color: #888;
		font-size: 0.9rem;
	}

	.footer-text a {
		color: #888;
		text-decoration: none;
		transition: all 0.3s ease;
		font-weight: 500;
		letter-spacing: 0.5px;
	}

	.footer-links {
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.footer-links a {
		color: #888;
		text-decoration: none;
		transition: all 0.3s ease;
		font-weight: 500;
		letter-spacing: 0.5px;
	}

	.footer-links a:hover {
		color: #b026ff;
		text-shadow: 0 0 10px rgba(176, 38, 255, 0.3);
	}

	.footer-links i {
		font-size: 1.2rem;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	@media (max-width: 768px) {
		.footer-content {
			justify-content: center;
		}
	}
</style>
