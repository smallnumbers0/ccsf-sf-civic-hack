---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Partners from '../components/Partners.astro';
import RegistrationForm from '../components/RegistrationForm.astro';

const eventDate = "September 20th, 2025";
const actUrl = "https://www.civictechnologists.org/";
const dataSfUrl = "https://datasf.org/";
const csClubUrl = "https://ccsf-cs.club/";
const discordUrl = "https://discord.gg/nrsPNfwBMY";
const githubUrl = "https://github.com/smallnumbers0";
const registrationUrl = "https://docs.google.com/forms/d/e/1FAIpQLScfH-QkcKFy3YXwvrafJT9S5Vs0MfVV9uvy3_nqjPyMdaLZ2g/formResponse";

const partners = [
	{
		name: "Alliance of Civic Technologists",
		description: "Empowering civic innovation through technology",
		url: actUrl
	},
	{
		name: "DataSF",
		description: "Transforming data into actionable insights for San Francisco",
		url: dataSfUrl
	},
	{
		name: "CCSF CS CLUB",
		description: "Community of students who are passionate about technology and innovation",
		url: csClubUrl
	},
	{
		name: "CCSF CS Club Discord",
		description: "Join our Discord server to stay connected",
		url: discordUrl
	}
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Join us for SF CIVIC TECH X ACT - A collaborative hackathon presented by CCSF CS CLUB, bringing together students and civic tech enthusiasts to solve San Francisco's challenges." />
		<title>SF CIVIC TECH X ACT | CCSF CS CLUB</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
	</head>
	<body>
		<main>
			<section class="hero">
				<div class="container">
					<div class="hero-content">
						<div class="title-group">
							<p class="presented-by">{'{'} CCSF CS CLUB {'}'} PRESENTS<span class="cursor">_</span></p>
							<h1><span class="hack-text">SF CIVIC TECH HACK DAY;</span></h1>
							<div class="inline-group">
								<div class="event-date">{eventDate}</div>
								<button class="register-button" onclick="openRegistrationModal()" type="button">Register</button>
							</div>
						</div>
					</div>
				</div>
			</section>

			<Partners partners={partners} />
		</main>

		<Footer csClubUrl={csClubUrl} githubUrl={githubUrl} discordUrl={discordUrl} />

		<RegistrationForm formAction={registrationUrl} />

		<script is:inline>
			function openRegistrationModal() {
				console.log('Button clicked!'); // Debug log
				const modal = document.querySelector('#registrationModal');
				console.log('Modal element:', modal); // Debug log
				if (modal) {
					modal.classList.add('visible');
					console.log('Modal should be visible now'); // Debug log
					console.log('Modal classes:', modal.classList.toString()); // Debug log
				} else {
					console.error('Modal not found!'); // Debug log
				}
			}

			// Wait for page to load
			document.addEventListener('DOMContentLoaded', function() {
				console.log('DOM loaded, checking for modal...');
				const modal = document.querySelector('#registrationModal');
				console.log('Modal found on DOM load:', modal);
			});
		</script>

		<style>
			.hack-text {
				font-family: 'IBM Plex Sans', sans-serif, 'IBM Plex Sans', sans-serif, 'Fira Code', monospace;
				/* letter-spacing: -px; */
				color: #00ff00;
			}

			.register-button {
				display: inline-flex;
				align-items: center;
				padding: 0.75rem 1.5rem;
				background: rgba(0, 0, 0, 0.8);
				border: 1px solid var(--primary-color);
				border-radius: 4px;
				text-decoration: none;
				font-family: 'IBM Plex Sans', sans-serif, 'Fira Code', monospace;
				font-weight: 500;
				cursor: pointer;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
				box-shadow: 0 0 10px rgba(176, 38, 255, 0.2);
				color: var(--text-color);
				font-size: 1rem;
			}

			.event-details {
				background-color: var(--card-background);
			}

			.hero {
				text-align: left;
				padding: 8rem 0;
				
			}

			.hero-content {
				max-width: 800px;
				margin: 0 auto;
				position: relative;
				z-index: 1;
			}

			.title-group {
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				gap: 1rem;
			}

			.presented-by {
				color: #00ff00;
				font-family: 'IBM Plex Sans', sans-serif, 'Fira Code', monospace;
				text-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
				margin-bottom: 1rem;
				font-size: 1.5rem;
				letter-spacing: 0.5px;
				position: relative;
				display: inline-block;
			}

			@media (max-width: 768px) {
				.presented-by {
					font-size: 1.2rem;
				}
			}

			.cursor {
				color: #00ff00;
				animation: blink 1s infinite;
				margin-left: 0.2rem;
			}

			.hack-text {
				font-size: clamp(2rem, 5vw, 3rem);
				line-height: 1.2;
				display: block;
			}

			.inline-group {
				display: inline-flex;
				align-items: center;
				gap: 1rem;
				margin-top: 2rem;
				width: 100%;
			}

	

			.event-date .highlight {
				color: #00ff00;
				text-shadow: none;
			}

			.register-button::before {
				content: '>';
				color: #00ff00;
				margin-right: 0.5rem;
				font-weight: bold;
				vertical-align: middle;
			}

			@media (max-width: 768px) {
				.hero-content {
					gap: 1.5rem;
				}

				.hack-text {
					font-size: 2rem;
				}

				.event-date, .register-button {
					display: block;
					width: 100%;
					text-align: center;
					margin: 0;
				}

				.event-date {
					margin-bottom: 1.5rem;
				}

				.event-date::before, .register-button::before {
					display: inline-block;
					margin-right: 0.5rem;
				}

				.inline-group {
					display: flex;
					flex-direction: column;
					gap: 1rem;
					width: 100%;
					margin-top: 1.5rem;
				}

				.hero-content {
					padding: 0 1rem;
				}

				.hack-text {
					font-size: 2rem;
				}
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.content-container {
				max-width: 800px;
				margin: 0 auto;
			}

			.section {
				padding: 4rem 0;
				position: relative;
			}

			.inline-group {
				margin-top: 2rem;
			}

			.event-date, .register-button {
				display: inline-block;
				padding: 0 1.5rem;
				background: rgba(0, 0, 0, 0.8);
				border: 1px solid #00ff00;
				border-radius: 4px;
				height: 42px;
				line-height: 42px;
				font-size: 1rem;
				margin: 0;
				font-family: 'IBM Plex Sans', sans-serif, 'Fira Code', monospace;
				color: #00ff00;
				text-shadow: 0 0 10px rgba(0, 255, 0, 0.3);
				position: relative;
				overflow: hidden;
			}

			.event-date {
				margin-right: 1rem;
			}

			.event-date::before {
				content: '$';
				margin-right: 0.5rem;
				opacity: 0.8;
			}

			.register-button {
				text-decoration: none;
				font-weight: 500;
				cursor: pointer;
				transition: all 0.3s ease;
				color: #00ff00;
			}

			.register-button::before {
				content: '$';
				margin-right: 0.5rem;
				font-weight: bold;
			}

			.event-date .highlight, .register-button .highlight {
				color: #00ff00;
				text-shadow: none;
			}

			.register-button:hover {
				background: rgba(0, 0, 0, 0.9);
				box-shadow: 
					0 0 20px rgba(0, 255, 0, 0.2),
					0 0 40px rgba(0, 255, 0, 0.1);
				transform: translateY(-1px);
			}

			.register-button:hover::after {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 200%;
				height: 100%;
				background: linear-gradient(
						90deg,
						transparent,
						rgba(0, 255, 0, 0.2),
						transparent
					);
				animation: glitch-scan 1s ease-in-out;
			}

			@keyframes glitch-scan {
				0% {
					left: -100%;
				}
				100% {
					left: 100%;
				}
			}

			@media (max-width: 768px) {
				.event-date, .register-button {
					display: block;
					width: 100%;
					text-align: center;
					margin: 0;
				}
			}

		</style>
	</body>
</html>
